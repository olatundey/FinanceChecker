@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ResetPassword">
            <input type="hidden" asp-for="Input.Code" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            @if (Model.Input.TwoFactorAuthEnabled)
            {
                <div class="form-group">
                    <label asp-for="Input.Code">Verification Code</label>
                    <input asp-for="Input.Code" class="form-control" required />
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Input.TwoFactorAuthEnabled" />

            <button type="submit" class="btn btn-primary">Reset password</button>
        </form>
    </div>
</div>
