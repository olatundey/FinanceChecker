@model Account


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h2>Delete Account</h2>
            <p>Are you sure you want to delete this account?</p>
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="ConfirmDelete">
                        <input type="hidden" name="AccountID" value="@Model.AccountID" />

                        <div class="form-group">
                            <label>Account Type:</label>
                            <p>@Model.AccountType</p>
                        </div>

                        <div class="form-group">
                            <label>Account Number:</label>
                            <p>@Model.AccountNumber</p>
                        </div>

                        <div class="form-group">
                            <label>Institution Name:</label>
                            <p>@Model.InstitutionName</p>
                        </div>

                        <div class="form-group">
                            <label>Balance:</label>
                            <p>@Model.Balance.ToString("N2")</p>
                        </div>

                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="/Account/Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
