@using Microsoft.AspNetCore.Identity

@model Bill

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <h2 class="mb-4">Delete Bill</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="BillName">Bill Name:</label>
                    <input asp-for="BillName" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <input asp-for="Description" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Amount">Amount:</label>
                    <input asp-for="Amount" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="DueDate">Due Date:</label>
                    <input asp-for="DueDate" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

</style>
