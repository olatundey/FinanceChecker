@using Microsoft.AspNetCore.Identity

@model Bill

<h2>Delete Bill</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="BillName">Bill Name:</label>
        <input asp-for="BillName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Amount">Amount:</label>
        <input asp-for="Amount" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" class="form-control" disabled />
    </div>

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
}
