@model FinanceChecker.Models.Budget

<h1>Edit Budget</h1>

@using (Html.BeginForm("EditBudget", "Budget", FormMethod.Post))
{
    @Html.HiddenFor(model => model.BudgetID)

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName)
        @Html.DropDownListFor(model => model.CategoryName, (SelectList)ViewBag.Categories, "-- Select Category --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount)
        @Html.TextBoxFor(model => model.Amount, "{0:N2}", new { @class = "form-control" })
    </div>



    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.CategoryID)
    @Html.HiddenFor(model => model.TotalTransactionsAmount)
    @Html.HiddenFor(model => model.CreatedAt)
    @Html.HiddenFor(model => model.UpdatedAt)

    @Html.HiddenFor(model => model.Progress)

    <input type="submit" value="Save Changes" class="btn btn-primary" />
}