@model FinanceChecker.Models.ContactForm

@{
    ViewData["Title"] = "Contact Us";
}

<br />
<div class="card">
    <div class="card-body">
        <h1 class="card-title">Contact Us</h1>
        <div class="row">
            <div class="col-6">
                <form asp-action="SubmitContactForm" method="post">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                    </div>
                    <div class="form-group">
                        <label for="Message">Message</label>
                        <textarea class="form-control" id="Message" name="Message" rows="5" required>@Model.Message</textarea>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-6">
                <div class="text-center">
                    <p class="lead">Please provide a valid email address so we can get back to you.</p>
                    <p class="lead">or</p>
                    <h4>
                        Email us at info@financechecker.com
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>
