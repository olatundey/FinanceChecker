@model FinanceChecker.DataTransferObject.ForgotPasswordViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Forgot Password</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <h2 class="mb-4">Forgot Password</h2>

        <form asp-controller="Home" asp-action="ForgotPassword" method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="Email" required>
                <label for="UserNameOrEmail">Email:</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="SecurityQuestion" required>
                <label for="SecurityQuestion">Security Question:</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="SecurityAnswer" required>
                <label for="SecurityAnswer">Security Answer:</label>
            </div>

            <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>
