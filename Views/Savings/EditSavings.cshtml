@model FinanceChecker.Models.Savings
<h2>Edit Savings Goal</h2>
<form asp-controller="Savings" asp-action="EditSavings" method="post">
    <input type="hidden" asp-for="SavingsID" />

    <div class="form-group">
        <label for="SavingsName">Savings Name:</label>
        <input asp-for="SavingsName" class="form-control" />
        <span asp-validation-for="SavingsName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Goal">Goal:</label>
        <input asp-for="Goal" class="form-control" value="@Model.Goal.ToString("0.00")" />
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DueDate">Due Date:</label>
        <input asp-for="DueDate" type="date" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CurrentSavings">Current Savings:</label>
        <input asp-for="CurrentSavings" class="form-control" value="@Model.CurrentSavings.ToString("0.00")" />
        <span asp-validation-for="CurrentSavings" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>

    <input asp-for="Progress" type="hidden" />
</form>
